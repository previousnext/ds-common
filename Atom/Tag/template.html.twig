{% include '@nswds/Utility/_class_handler.twig' with {
    base_class: 'nsw-tag'
} %}

{% if type == "link" %}
    {% for item in items %}
        <a href="{{ item.href }}" {{ attributes }}>{{ item.title }}</a>
    {% endfor %}
{% endif %}

{% if type == "text" %}
    {% for item in items %}
        <span {{ attributes }}>{{ item }}</span>
    {% endfor %}
{% endif %}

{% if type == "checkbox" %}
    {% for item in items %}
        <div {{ attributes.addClass('nsw-tag--checkbox') }}>
            <input type="checkbox"
                   id="{{ item.id }}"
                   name="{{ item.name }}"
                   value="{{ item.value }}"
                   {% if item.checked %} checked{% endif %}>
            <label for="{{ item.id }}">{{ item.label }}</label>
        </div>
    {% endfor %}
{% endif %}
